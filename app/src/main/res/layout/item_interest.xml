<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_headImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/general_mingshi_no" />

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_headImg"
        android:layout_toRightOf="@+id/iv_headImg"
        android:text="昵称"
        android:textColor="@color/textColor_default"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_headImg"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/tv_nickname"
        android:text="女"
        android:textColor="@color/screen_fillColor"
        android:textSize="14sp" />

    <RatingBar
        android:id="@+id/rb_score"
        style="@style/GlimmerRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_alignTop="@+id/iv_headImg"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/iv_headImg"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize="0.1" />

    <TextView
        android:id="@+id/tv_beanVermicelli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rb_score"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/iv_headImg"
        android:gravity="center_vertical|end"
        android:text="粉丝数或学生数"
        android:textColor="@color/textColor_default"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_realname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_headImg"
        android:layout_toRightOf="@+id/iv_headImg"
        android:gravity="center"
        android:text="已实名"
        android:textColor="@color/screen_fillColor"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_authentication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_headImg"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/tv_realname"
        android:text="已认证"
        android:textColor="@color/screen_fillColor"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="121dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/tv_attention"
            android:layout_width="65dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="取消关注"
            android:textColor="@color/screen_fillColor"
            android:textSize="12sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/iv_headImg"
        android:background="@color/textColor_division" />
</RelativeLayout>