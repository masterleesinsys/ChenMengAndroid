<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:context="activity.TeacherDetailActivity">

    <com.github.ybq.android.spinkit.SpinKitView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.ThreeBounce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="gone"
        app:SpinKit_Color="@color/colorAccent" />

    <ScrollView
        android:id="@+id/sv_teacher_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_bottom"
        android:layout_below="@+id/title"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_jiaoshi_top" />

            <ImageView
                android:id="@+id/iv_headImg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="27dp"
                android:src="@drawable/general_touxiang_y_no" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/iv_headImg"
                android:text="王大"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="33dp"
                android:layout_toRightOf="@+id/tv_name"
                android:src="@drawable/ico_man_js" />

            <RatingBar
                android:id="@+id/rb_grade"
                style="@style/GlimmerRatingBar_white"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_below="@+id/tv_name"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/iv_headImg"
                android:isIndicator="true"
                android:stepSize="0.5"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:id="@+id/iv_beanVermicelli"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_below="@+id/rb_grade"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/iv_headImg"
                android:src="@drawable/ico_fans_js" />

            <TextView
                android:id="@+id/tv_beanVermicelli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rb_grade"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/iv_beanVermicelli"
                android:text="粉丝"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_beanVermicelli_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rb_grade"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_beanVermicelli"
                android:text="50"
                android:textColor="@color/mine_vip"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/iv_autonym"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_below="@+id/rb_grade"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_beanVermicelli_number"
                android:src="@drawable/ico_authentication_js" />

            <TextView
                android:id="@+id/tv_autonym"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rb_grade"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/iv_autonym"
                android:text="已实名"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/iv_authentication"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_below="@+id/rb_grade"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_autonym"
                android:src="@drawable/ico_certified_js" />

            <TextView
                android:id="@+id/tv_authentication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rb_grade"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/iv_authentication"
                android:text="已认证"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/iv_headImg"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="可预约"
                android:textColor="@color/makeAnAppointment"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_attention"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/iv_headImg"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="关注"
                android:textColor="@color/screen_fillColor"
                android:textSize="11sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_skill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_bg"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/white" />

            <LinearLayout
                android:id="@+id/ll_option"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/rv_skill"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_introduce"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="介绍"
                    android:textColor="@color/textColor_scarch"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_video"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="视频(10)"
                    android:textColor="@color/textColor_scarch"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_evaluate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="评价(6)"
                    android:textColor="@color/textColor_scarch"
                    android:textSize="15sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_teacher_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_option"
                android:background="@color/white"
                android:paddingBottom="25dp"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp"
                android:visibility="gone" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_videoAndEvaluate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_option"
                android:background="@color/white"
                android:visibility="gone" />

        </RelativeLayout>

    </ScrollView>

    <include
        android:id="@+id/title"
        layout="@layout/titlebar" />

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_makeAnAppointmentToTeaching"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/screen_fillColor"
            android:gravity="center"
            android:text="预约授课(名师培优)"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_interactiveAnsweringQuestions"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/main_update_color"
            android:gravity="center"
            android:text="互动答疑(向他提问)"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>

</RelativeLayout>
