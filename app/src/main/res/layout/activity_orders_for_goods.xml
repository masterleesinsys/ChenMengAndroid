<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:context="activity.OrdersForGoodsActivity">

    <com.github.ybq.android.spinkit.SpinKitView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.ThreeBounce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="gone"
        app:SpinKit_Color="@color/colorAccent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_commodity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_shippingAddress"
        android:layout_marginTop="10dp"
        android:background="@color/white" />

    <RelativeLayout
        android:id="@+id/rl_shippingAddress"
        android:layout_width="match_parent"
        android:layout_below="@+id/title"
        android:layout_height="100dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/ico_positioning_xd" />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ico_right" />

        <TextView
            android:id="@+id/tv_consignee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_position"
            android:paddingTop="15dp"
            android:text="收货人：王大"
            android:textColor="@color/textColor_default"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_right"
            android:paddingTop="15dp"
            android:text="18532132455"
            android:textColor="@color/textColor_default"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_shippingAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_consignee"
            android:layout_toLeftOf="@+id/iv_right"
            android:layout_toRightOf="@+id/iv_position"
            android:lines="2"
            android:paddingTop="13dp"
            android:text="收货地址：收货地址收货地址收货地址收货地址收货地址收货地址收货地址"
            android:textColor="@color/textColor_default"
            android:textSize="14sp" />

    </RelativeLayout>

    <EditText
        android:id="@+id/tv_leaveAMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv_commodity"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="留言"
        android:minHeight="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/textColor_default"
        android:textColorHint="@color/textColor_hint"
        android:textSize="15sp" />

    <include
        android:id="@+id/title"
        layout="@layout/titlebar" />

</RelativeLayout>
