<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="135dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="7dp"
        android:scaleType="fitXY"
        android:src="@drawable/general_kecheng_no" />

    <TextView
        android:id="@+id/tv_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_photo"
        android:layout_below="@+id/iv_photo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="小学一年级语文下册2016版"
        android:textColor="@color/textColor_default"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_photo"
        android:layout_below="@+id/tv_explain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="￥50.00"
        android:textColor="@color/main_update_color"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_originalCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/iv_photo"
        android:layout_below="@+id/tv_explain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="￥50.00"
        android:layout_marginBottom="8dp"
        android:textColor="@color/textColor_hint"
        android:textSize="11sp" />


</RelativeLayout>