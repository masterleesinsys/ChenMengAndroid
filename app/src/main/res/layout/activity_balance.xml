<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:context="activity.BalanceActivity">

    <com.github.ybq.android.spinkit.SpinKitView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.ThreeBounce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="gone"
        app:SpinKit_Color="@color/colorAccent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_theBalanceDetails">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_order_dynamic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" />

        <include
            android:id="@+id/not_info"
            layout="@layout/not_info"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title">

        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_jiaoshi_top" />

        <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="27dp">

            <ImageView
                android:id="@+id/iv_headImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_revenue_ye" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="17dp"
                android:text="累计收益"
                android:textColor="@color/textColor_default"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_headImg"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="17dp"
                android:text="￥1000"
                android:textColor="@color/main_update_color"
                android:textSize="10sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rl_head"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/rl_head"
            android:text="159684725864"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_username"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_username"
            android:text="王飞"
            android:textColor="@color/mine_vip"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/tv_withdrawDeposit_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rl_head"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/rl_head"
            android:text="支付宝账户提现"
            android:textColor="@color/withdrawDeposit"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_withdrawDeposit"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/rl_head"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="提现"
            android:textColor="@color/textColor_hint"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_topUp"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/rl_head"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="充值"
            android:textColor="@color/main_update_color"
            android:textSize="11sp" />

    </RelativeLayout>

    <!--余额详情-->
    <LinearLayout
        android:id="@+id/tv_theBalanceDetails"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rl_title"
        android:background="@color/white"
        android:orientation="horizontal">

        <View
            android:layout_width="3dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:background="@color/main_update_color" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:text="余额详情"
            android:textColor="@color/textColor_default"
            android:textSize="15sp"
            android:textStyle="normal" />

    </LinearLayout>

    <include
        android:id="@+id/title"
        layout="@layout/titlebar" />

</RelativeLayout>
